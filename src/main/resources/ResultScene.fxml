<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.sandromax.checkmyknowledge.view.controller.ResultSceneController">
    <children>
        <Label fx:id="lblResults">Результаты</Label>
        <TableView fx:id="tvResults">
         <columns>
            <TableColumn fx:id="question" prefWidth="500.0" sortable="false" text="Вопрос" />
            <TableColumn fx:id="yourAnswer" prefWidth="150.0" sortable="false" text="Ваш ответ" />
            <TableColumn fx:id="rightAnswer" prefWidth="150.0" sortable="false" text="Правильный ответ" />
         </columns></TableView>
        <HBox alignment="TOP_CENTER">
            <Button fx:id="btnTestAgain" onAction="#testAgain" text="Тестировать снова">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Button>
            <Button fx:id="btnExit" onAction="#exit" text="Выход">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin></Button>
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
        </HBox>
    </children>

</VBox>
